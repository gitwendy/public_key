/* pages/detail/detail.wxss */

.detail_container {
  width: 100%;
  height: 1800rpx;
}

.douban_top {
  width: 100%;
  height: 88rpx;
  /* background-color: pink; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.top_left {
  color: #1bb61c;
  width: 20%;
  font-size: 26px;
  font-weight: 700;
  text-align: center;
}

.top_middle {
  width: 70%;
}

.top_right {
  width: 10%；;
}

.top_middle input {
  border: 1px solid gray;
  width: 40%;
  height: 66rpx;
  border-radius: 33rpx;
  text-indent: 50rpx;
  background-color: #f7f7f7;
}

.top_right image {
  width: 88rpx;
  height: 88rpx;
}

.douban_app {
  width: 100%;
  height: 140rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.app_left {
  width: 10%;
  height: 80rpx;
  background-color: #1ec526;
  color: white;
  border-radius: 15rpx;
  text-align: center;
  font-size: 24px;
  line-height: 80rpx;
}

.app_middle {
  width: 50%;
  /* border: 1px solid gray; */
  height: 100rpx;
}

.app_right {
  width: 25%;
  height: 80rpx;
  border-radius: 32rpx;
  color: white;
  background-color: #4ab659;
  text-align: center;
  line-height: 80rpx;
  font-size: 16px;
}

.details_content {
  width: 100%;
  height: 800rpx;
  background-color: #7f776e;
}

.details_top {
  width: 100%;
  height: 400rpx;
  /* border: 1px solid red; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left_image_details {
  width: 35%;
  height: 400rpx;
  /* border: 1px solid aqua; */
}

.left_image_details image {
  width: 100%;
  height: 400rpx;
}

.right_details_content {
  width: 65%;
  height: 400rpx;
  /* border: 1px solid darkblue; */
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
}

.movieName {
  width: 100%;
  height: 100rpx;
  /* border: 1px solid saddlebrown; */
  font-size: 22px;
  line-height: 100rpx;
  color: white;
  overflow: hidden; /*内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
  white-space: nowrap; /*不换行 */
}

.EnglishName {
  width: 100%;
  height: 70rpx;
  /* border: 1px solid darkblue; */
  line-height: 70rpx;
  color: white;
}

.movieType {
  width: 100%;
  height: 90rpx;
  /* border: 1px solid red; */
  color: white;
}

.look {
  width: 100%;
  height: 80rpx;
  /* border: 1px solid firebrick; */
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.want_see {
  width: 43%;
  height: 60rpx;
  background-color: white;
  border-radius: 10rpx;
  text-align: center;
}

.have_seen {
  width: 43%;
  height: 60rpx;
  background-color: white;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
}

.details_mark {
  width: 90%;
  height: 260rpx;
  /* border:1px solid red; */
  border-radius: 20rpx;
  background-color: #726b63;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 5%;
}

.marl_left {
  width: 50%;
  height: 260rpx;
}

.mark_tm {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
}

.mark_right {
  width: 50%;
  height: 260rpx;
}

.mark_right image {
  width: 100%;
  height: 260rpx;
}

.canPlay {
  width: 90%;
  height: 140rpx;
  border-radius: 20rpx;
  /* border:1px solid red; */
  margin-left: 5%;
}

.degree {
  color: white;
  font-size: 24px;
  /* text-align: center; */
  margin-left: 20rpx;
}

.canPlay image {
  width: 100%;
  height: 140rpx;
}

.synopsis_content {
  width: 100%;
  height: 230rpx;
  /* border:1px solid red; */
}

.synopsis_content_detail {
  width: 100%;
  height: 190rpx;
  overflow: scroll;
}

.Director_content {
  width: 100%;
  height: 420rpx;
  /* border: 1px solid red; */
}

.director {
  width: 100%;
  height: 40rpx;
  font-size: 16px;
}

.scroll-view {
  height:350rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  white-space: nowrap;
}
.director_details{
  width: 30%;
  height: 350rpx;
  display: inline-block;
  /* border:1px solid pink; */

}
.image_large{
